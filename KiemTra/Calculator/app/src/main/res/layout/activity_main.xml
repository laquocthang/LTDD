<?xml version="1.0" encoding="utf-8"?>    <!-- La Quoc Thang - 1610207 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#d7dbe2"
        android:gravity="bottom|right"
        android:maxLines="1"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:textColor="@android:color/black"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#d7dbe2"
        android:gravity="bottom|right"
        android:maxLines="1"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <LinearLayout style="@style/MyLinearLayout">

        <Button
            android:id="@+id/btn_delete"
            style="@style/MyButton_Symbol"
            android:text="C"
            android:onClick="btDelete_OnClick"/>

        <Button
            android:id="@+id/btn_undo"
            style="@style/MyButton_Symbol"
            android:text="Undo"
            android:onClick="btUndo_OnClick"/>

        <Button
            android:id="@+id/btn_redo"
            style="@style/MyButton_Symbol"
            android:text="Redo"
            android:onClick="btRedo_OnClick"/>

        <ImageButton
            android:id="@+id/btn_div"
            style="@style/MyButton_Symbol"
            android:src="@drawable/ic_div"
            android:onClick="btOperator_OnClick"/>

    </LinearLayout>

    <LinearLayout style="@style/MyLinearLayout">

        <Button
            android:id="@+id/btn_7"
            style="@style/MyButton_Number"
            android:text="7"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_8"
            style="@style/MyButton_Number"
            android:text="8"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_9"
            style="@style/MyButton_Number"
            android:text="9"
            android:onClick="btNumber_OnClick"/>

        <ImageButton
            android:id="@+id/btn_mul"
            style="@style/MyButton_Symbol"
            android:src="@drawable/ic_mul"
            android:onClick="btOperator_OnClick"/>


    </LinearLayout>

    <LinearLayout style="@style/MyLinearLayout">

        <Button
            android:id="@+id/btn_4"
            style="@style/MyButton_Number"
            android:text="4"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_5"
            style="@style/MyButton_Number"
            android:text="5"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_6"
            style="@style/MyButton_Number"
            android:text="6"
            android:onClick="btNumber_OnClick"/>

        <ImageButton
            android:id="@+id/btn_minus"
            style="@style/MyButton_Symbol"
            android:src="@drawable/ic_minus"
            android:onClick="btOperator_OnClick"/>


    </LinearLayout>

    <LinearLayout style="@style/MyLinearLayout">

        <Button
            android:id="@+id/btn_1"
            style="@style/MyButton_Number"
            android:text="1"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_2"
            style="@style/MyButton_Number"
            android:text="2"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_3"
            style="@style/MyButton_Number"
            android:text="3"
            android:onClick="btNumber_OnClick"/>

        <ImageButton
            android:id="@+id/btn_plus"
            style="@style/MyButton_Symbol"
            android:src="@drawable/ic_plus"
            android:onClick="btOperator_OnClick"/>

    </LinearLayout>

    <LinearLayout style="@style/MyLinearLayout">

        <ImageButton
            android:id="@+id/btn_plus_minus"
            style="@style/MyButton_Number"
            android:src="@drawable/ic_plus_minus"
            android:onClick="btPlusMinus_OnClick"/>

        <Button
            android:id="@+id/btn_0"
            style="@style/MyButton_Number"
            android:text="0"
            android:onClick="btNumber_OnClick"/>

        <Button
            android:id="@+id/btn_dot"
            style="@style/MyButton_Number"
            android:text="."
            android:onClick="btDot_OnClick"/>

        <ImageButton
            android:id="@+id/btn_equal"
            style="@style/MyButton_Symbol"
            android:src="@drawable/ic_equal"
            android:onClick="btEqual_OnClick"/>

    </LinearLayout>

</LinearLayout>